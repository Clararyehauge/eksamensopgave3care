---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import Searchbar from "../components/Searchbar.astro";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4">
    <Heading htmlheading="h1" size="large">Komponentbibliotek</Heading>
    <Text stylingclasses="italic">Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
    <hr class="my-4" />
    <!-- start på typografi -->
    <section>
      <Heading htmlheading="h2" size="medium">Typografi & ovesrkrifter</Heading>
      <Text>Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
      <Heading htmlheading="h1" size="xlarge" font="display">h1 - xlarge - Display</Heading>
      <Heading htmlheading="h2" size="large" font="display">h2 - large - Display</Heading>
      <Heading htmlheading="h3" size="medium" font="display">h3 - medium - Display</Heading>
      <Heading htmlheading="h4" size="small" font="serif">h4 - small - Display</Heading>
      <Heading htmlheading="h5" size="xsmall" font="display">h5 - xsmall - Display</Heading><br />
      <Heading htmlheading="button" size="button" font="display">Button - small - Display</Heading><br />
      <Heading htmlheading="paragraphItalic" size="paragraphItalic" font="serif">P - paragraphItalic - Serif</Heading><br />
      <Heading htmlheading="numbers" size="numbers" font="sans">Tal - Sans</Heading>

      <Text teksttype="brødtekst">
        Her er en sektion brødtekst: Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ullam dolorem doloremque commodi eaque quisquam quasi recusandae veniam. Corporis totam <Link href="#">Default link: </Link> reiciendis quibusdam ratione iure aut, numquam tenetur voluptatem exercitationem sequi enim!
      </Text>
      <Text teksttype="konsultativ"> Her en sektion konsultativ tekst: Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ullam dolorem doloremque commodi eaque quisquam quasi recusandae veniam. Corporis totam reiciendis quibusdam ratione iure aut, numquam tenetur voluptatem exercitationem sequi enim! </Text>
    </section>
    <!-- slut på typografi -->
    <hr class="my-4" />
    <!-- start på søgefelt -->
    <Searchbar />
    <!-- slut på søgefelt -->
    <hr class="my-4" />

    <!-- Buttons komponent instanser -->
    <section>
      <Heading htmlheading="h2" size="medium">Buttons</Heading>
      <Text><Button>Default knap</Button></Text>
      <Text><Button variant="primary">Button variant: primary</Button></Text>
      <Text><Button variant="primary" size="small">Button variant: primary size small</Button></Text>
      <Text><Button variant="primary" size="medium">Button variant: primary size medium</Button></Text>
      <Text><Button variant="primary" size="large">Button variant: primary size large</Button></Text>
      <Text><Button variant="secondary" size="small">Button variant: secondary size small</Button></Text>
      <Text><Button variant="secondary" size="medium">Button variant: secondary size medium</Button></Text>
      <Text><Button variant="secondary" size="large">Variant: secondary size large</Button></Text>
    </section>
    <!-- Slut på Buttons komponent instanser -->
  </main>
</MainLayout>
