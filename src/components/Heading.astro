---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "h1", font = "sans", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xlarge: "text-[45px] lg:text-[61px]", // H1
  large: "text-[29px] lg:text-[49px]", // H2
  medium: "text-[25px] lg:text-[39px]", // H3
  small: "text-[22px] lg:text-[31px]", //H4
  xsmall: "text-[17px] lg:text-[22px]", //H5

  button: "text-[14px] lg:text-[20px]",

  body: "text-[13px] lg:text-[16px]",

  paragraphItalic: "italic text-[17px] lg:text-[31px]",

  numbers: "text-[38px] lg:text-[55px]",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
  serif: "font-serif",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font]]}><slot /></Htmlheading>
