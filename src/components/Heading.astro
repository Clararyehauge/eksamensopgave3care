---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "small", font = "sans", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  xlarge: "text-[2.8rem] lg:text-[3.8rem]", // H1
  large: "text-[1.8rem] lg:text-[2.5rem]", // H2
  medium: "text-[1.6rem] lg:text-[2.2rem]", // H3
  small: "text-[1.4rem] lg:text-[1.8rem]", //H4
  xsmall: "text-[1.2rem] lg:text-[1.6rem]", //H5

  paragraphItalic: "text-[1rem] lg:text-[1.4rem] italic font-light",

  numbers: "text-[1.875rem] lg:text-[2.8125rem]",

  menu: "text-[1rem] lg:text-[1.3rem] sans font-light",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
  serif: "font-serif",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font]]}><slot /></Htmlheading>
